<Window x:Class="audio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:audio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="top">
            <Button Name="btnOtworz" Content="Otwórz plik" Margin="10" Width="100" Height="30" Click="btnOtworz_Click"/>
            <Button Name="btnPlay" Content="Play" Margin="10" Width="100" Height="30" Click="btnPlay_Click"/>
            <Button Name="btnPause" Content="Pause" Margin="10" Width="100" Height="30" Click="btnPause_Click"/>
            <Button Name="btnStop" Content="Stop" Margin="10" Width="100" Height="30" Click="btnStop_Click"/>

        </StackPanel>
    </Grid>
</Window>
