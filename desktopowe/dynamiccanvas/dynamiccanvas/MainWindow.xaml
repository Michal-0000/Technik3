<Window x:Class="dynamiccanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dynamiccanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <Button Name="btn" Click="btn_Click" Width="120" Height="30" Content="Kulki"/>
            <TextBox Name="textBox" Text="1" Width="120" Height="30" Margin="5"/>
            <Canvas Name="canvas" Background="Beige" MouseDown="canvas_MouseDown" Height="300">

            </Canvas>
        </StackPanel>
    </Grid>
</Window>
