<Window x:Class="Canvasy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canvasy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Canvas Name="canvas" Background="Beige">
            <Line X1="10" X2="30" Y1="40" Y2="300" Stroke="DarkBlue" StrokeThickness="2"/>
            <Rectangle Width="200" Height="250" Canvas.Left="100" Canvas.Top="100" Fill="Green" Stroke="Red" StrokeThickness="3"/>
            <Ellipse Width="200" Height="120" Canvas.Left="300" Canvas.Top="100" Fill="Red" Stroke="Yellow" StrokeThickness="2"/>
        </Canvas>
    </Grid>
</Window>
