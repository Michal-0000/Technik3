<Window x:Class="Wideo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wideo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="5">
            <Button x:Name="LoadVideo" Content="Załaduj plik" Margin="5" Click="LoadVideo_Click"/>
            <ListBox x:Name="VideoListBox" Margin="5" SelectionMode="Single" Height="200"/>
            <Button Name="PlayButton" Content="Odtwórz" Margin="5" Click="PlayButton_Click"/>
            <Button x:Name="PauseButton" Content="Przerwij" Margin="5" Click="PauseButton_Click"/>
            <Button Name="StopButton" Content="Stop" Margin="5" Click="StopButton_Click"/>
        </StackPanel>
        <Border Grid.Column="1" Margin="5" Background="Black">
            <MediaElement Name="VideoPlayer" LoadedBehavior="Manual" 
                          Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <StackPanel Grid.Column="1" Margin="5" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Slider Name="TimelineSlider" Minimum="0" Margin="5" Width="380" ValueChanged="TimelineSlider_ValueChanged"/>
            <TextBlock Name="TimeText" Margin="5" Width="70" HorizontalAlignment="Right" Foreground="White"/>
        </StackPanel>

    </Grid>
</Window>
