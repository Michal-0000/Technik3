<Window x:Class="DateTime2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DateTime2"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <xctk:DateTimePicker Name="dateTimePicker" Format="Custom" FormatString="yyyy-MM-dd"
                             Maximum="2026-12-31" Minimum="2025-01-01" Value="{Binding selectedDate}"
                             VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" Width="338" Height="71"
                             ValueChanged="dateTimePicker_ValueChanged"/>
        <TextBox Name="minimalna" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top"
                 Margin="0,114,0,0" TextChanged="minimalna_TextChanged"/>
        <TextBox Name="maksymalna" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top"
         Margin="0,150,0,0" TextChanged="maksymalna_TextChanged"/>
        
    </Grid>
</Window>
